---
import { Picture } from "@astrojs/image/components";
import Link from "@components/ui/link.astro";
---
<main
  class="grid lg:grid-cols-2 place-items-center mx-auto my-auto md:pt-5 md:pb-5">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
    class:list={"hidden rounded-tr-full rounded-bl-full drop-shadow-2xl skew-y-1 lg:flex"}
      src="/gevsite.github.io/images/hero.jpg"
      alt="Geviton Employee Working"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 400px) 80vw, 500px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      <span>Ideation.</span> <br>
      <span>Prototyping.</span> <br>
      <span class="text-orange-500">Production.</span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
     We are an electronic design and manufacturing company that has been solving engineering and manufacturing challenges for customers operating in different markets. 
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="portfolio"
        class="flex gap-1 items-center justify-center bg-orange-500 hover:bg-orange-300"
        rel="noopener">
      Portfolio
      </Link>
      <Link
        size="lg"
        rel="noopener"
        href="blog"
        class="flex gap-1 items-center justify-center bg-black text-white border-black hover:bg-slate-700" >
      Blog
      </Link>
    </div>
  </div>
</main>